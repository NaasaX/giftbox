{% extends "layout.twig" %}

{% block content %}
    <style>
        .prestation-card {
            max-width: 500px;
            margin: 60px auto;
            padding: 1.5rem;
            background-color: #ffffff;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
            font-family: 'Segoe UI', sans-serif;
            text-align: center;
        }

        .prestation-card img {
            width: 100%;
            max-width: 100%;
            height: auto;
            border-radius: 12px;
            margin-bottom: 1.5rem;
        }

        .prestation-card h1 {
            font-size: 1.8rem;
            color: #2c3e50;
            margin-bottom: 1rem;
        }

        .prestation-card .prix {
            font-size: 1.4rem;
            color: #27ae60;
            margin: 0.5rem 0 1rem;
        }

        .prestation-card .description {
            font-size: 1.05rem;
            color: #555;
            margin-bottom: 1rem;
        }

        .prestation-card .categorie {
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }

        .prestation-card .categorie a {
            color: #3498db;
            text-decoration: none;
            font-weight: 600;
        }

        .prestation-card .categorie a:hover {
            text-decoration: underline;
        }

        .back-btn {
            margin-top: 1.5rem;
            padding: 0.6rem 1.2rem;
            font-size: 1rem;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .back-btn:hover {
            background-color: #2980b9;
        }
    </style>

    <div class="prestation-card">
        {% if prestation.img %}
            <img src="/img/{{ prestation.img }}" alt="Image de la prestation {{ prestation.nom }}">
        {% endif %}

        <h1>{{ prestation.libelle }}</h1>
        <div class="prix">{{ prestation.tarif }} €</div>

        <div class="description">{{ prestation.description }}</div>

        {% if prestation.categorie %}
            <div class="categorie">
                Catégorie :
                <a href="/categories/{{ prestation.categorie.id }}">
                    {{ prestation.categorie.libelle }}
                </a>
            </div>
        {% endif %}

        <button class="back-btn" onclick="retour()">Retour</button>
    </div>

    <script>
        function retour() {
            window.history.back();
        }
    </script>
{% endblock %}
